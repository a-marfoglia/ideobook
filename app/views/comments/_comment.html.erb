<div class="comment-container">
  <ul class="comments-list">
    <li>
	    <div class="cont-forum comment">
	      <div class="row">
		      <div class="col-xs-3 col-sm-2">
            <div class="avatar">
              <%= image_tag @micropost.user.avatar.thumb.url, alt: "Immagine del profilo", class: "img-circle" %>
              <p><%= comment.user.username %></p>
            </div>
          </div>
		      <div class="col-xs-9 col-sm-10">
				    <h6><%= link_to @micropost.user.username, @micropost.user %></h6>
			      <div class="comment-content">
				      <%= comment.content %>
			      </div>
			      <span class="pull-right glyphicon glyphicon-time"><%= time_ago_in_words(comment.created_at) %></span>
		      </div>
		    </div>
	    </div>
    </li>
  </ul>
 </div>
