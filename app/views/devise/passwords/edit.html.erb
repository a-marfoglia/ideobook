<div id="sign-form" class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <h2>Modifica password</h2>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col-xs-12 col-sm-8 col-lg-7">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
           <%= f.hidden_field :reset_password_token %>
            <div class="input-group field">
              <%= f.password_field :password, class: 'form-control',
                  placeholder: "Password (Minimo #{@minimum_password_length} caratteri)" %>
              <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            </div>

            <div class="input-group field">
              <%= f.password_field :password_confirmation, class: 'form-control',
                  placeholder: "Conferma password" %>
              <span class="input-group-addon"><i class="glyphicon glyphicon-ok"></i></span>
            </div>

            <div class="actions">
              <%= f.submit "Modifica password", class: "btn btn-primary btn-wide" %>
            </div>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-4 col-lg-5 border-left link">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
