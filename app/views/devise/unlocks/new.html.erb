<div id="sign-form" class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <h2>Rispedisci istruzioni di sblocco</h2>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="col-xs-12 col-sm-8 col-lg-7">
         <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
            <div class="input-group field">
              <%= f.email_field :email, class: 'form-control', placeholder: "E-mail", autofocus: true %>
              <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            </div>
            <div class="actions">
              <%= f.submit "Rinvia istruzioni", class: "btn btn-primary btn-wide" %>
            </div>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-4 col-lg-5 border-left link">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
