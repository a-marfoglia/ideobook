<%= render layout: 'layouts/forum_layout' do %>
  <div class="row">
    <div id="profile" class="col-xs-12 col-md-8">
       <div class="main-list">
        <div class="cont-forum profile">
          <div class="col-xs-3">
            <div class="pull-right user-avatar-container">
              <%= image_tag @user.avatar.small.url, alt: "Immagine del profilo"%>
              <% if current_user == @user %>
                <span>Cambia immagine</span>
                <%= form_for(current_user, url: avatar_upload_path(current_user)) do |f| %>
                  <div class="hiddenfile">
                    <%= f.file_field :avatar %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="col-xs-9">
            <h6><%= @user.username %><span class="glyphicon glyphicon-cog pull-right"></span></h6>
            <p>NazionalitÃ :</p>
            <p>Lettori:</p>
            <p>Genere preferito:</p>
            <div class="profile-btn border-top text-center">
              <a class="border-right" type="button">Segui</a>
              <a class="border-right" type="button">Racconti</a>
              <a type="button">Contatta</a>
            </div>
          </div>
        </div>
       </div>
    </div>
    <div class="col-xs-12 col-md-4">
      Sidebars
    </div>
  </div>
<% end %>

<script>
  /* autosubmit */
  input = $('#user_avatar');
  input.change(function(){
    if (input.val() != "")
      input.closest('form').submit();
  });
  /* apre l'input file utilizzando lo span */
  $('.user-avatar-container span').click(function(){
    input.trigger('click');
  });
</script>
