
<div class="container-fluid" id="background">
  <section class="container" id="forum-main">
    <header style="min-height:200px;">
      <%= link_to microposts_path do %>
        <div class="crop-img">
          <%= image_tag 'forum-bg.jpg', class: "img-responsive" %>
        </div>
      <% end %>

          <div class="f-navbar cont-forum text-center">
            <div class="row">
	            <div class="hidden-xs col-sm-2 col-md-1">
	              <%= link_to microposts_path do %>
            	    <%= image_tag image_path('logo.jpg')%>
            	  <% end %>
	            </div>
	            <div class="hidden-xs hidden-sm col-md-3 dropdown">
	              <a data-toggle="dropdown" href="#">Aggiunti di recente</a>
	              <b class="caret"></b>
	              <ul class="dropdown-menu" role="menu">
		            <li role="presentation">
		              <a role="menuitem" tabindex="-1" href="#">Aggiunti di recente</a>
		            </li>
		            <li role="presentation">
		              <a role="menuitem" tabindex="-2" href="#">Più visti</a>
		            </li>
		            <li role="presentation">
		              <a role="menuitem" tabindex="-3" href="#">Internazionali</a>
		            </li>
	              </ul>
	            </div>
	            <div class="col-xs-12 col-sm-5 col-md-4">
	              <%= content_tag :div, class: 'input-group' do %>
		              <input type="text" class="form-control" placeholder="Ricerca racconto..">
		              <%= content_tag :span, (content_tag :i, nil, class: 'glyphicon glyphicon-search'), class: 'input-group-addon' %>
                <% end %>
	            </div>
	            <div class="hidden-sm hidden-md hidden-lg col-xs-3">
	              <%= link_to microposts_path do %>
            	    <%= image_tag image_path('logo.jpg')%>
            	  <% end %>
	            </div>
	            <div class="col-xs-7 col-sm-4 col-md-3">
                  <%= link_to new_micropost_path, class: 'btn-primary btn' do %>
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    Scrivi racconto
                  <% end %>
	            </div>
	            <div class="col-xs-2 col-sm-1 text-center">
                <div class="dropdown">
                  <a class="dropdown-toggle" type="button" id="dropdownNotifies" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    <span class="glyphicon glyphicon-bell"></span>
                  </a>
                  <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownNotifies">
                    <li class="dropdown-header">Ultime notifiche:</li>
                    <li><a href="#">Notify 1</a></li>
                    <li><a href="#">Notify 2</a></li>
                    <li><a href="#">Notify 3</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="#">Visualizza tutto</a></li>
                    <li><a href="#">Segna come già lette</a></li>
                  </ul>
                </div>
	              <a></a>
	            </div>
	          </div>
	        </div>

    </header>
    <div class="content">
      <%= yield %>
    </div>
  </section>
</div>
